{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "yarn generate:types && yarn build:remix && yarn build:copyfiles && yarn build:payload && yarn build:server",
    "build:copyfiles": "copyfiles -u 1 \"cms/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "build:payload": "payload build",
    "build:remix": "remix build",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development nodemon --exec 'ts-node --require dotenv/config ./server.ts'  --watch ./server.ts",
    "dev:remix": "remix watch",
    "start": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "typecheck": "tsc -p tsconfig.server.json",
    "generate:types": "cross-env payload generate:types",
    "generate:images": "cross-env ts-node ./cms/scripts/generateImageSizes"
  },
  "dependencies": {
    "@hcaptcha/react-hcaptcha": "^1.8.1",
    "@remix-run/css-bundle": "^1.13.0",
    "@remix-run/express": "^1.12.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@types/html-escaper": "^3.0.0",
    "@types/nodemailer": "^6.4.7",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "date-fns-tz": "^2.0.0",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "html-escaper": "^3.0.3",
    "i18next": "^22.4.10",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fs-backend": "^2.1.1",
    "i18next-http-backend": "^2.1.1",
    "isbot": "^3.6.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "payload": "^1.6.32",
    "react": "^18.2.0",
    "react-cookie-consent": "^8.0.1",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.5",
    "remix-i18next": "^5.0.0",
    "remix-utils": "^6.0.0",
    "slugify": "^1.6.5",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  }
}
