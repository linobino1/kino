    "@payloadcms/plugin-seo": "catalog:",
    "@payloadcms/richtext-lexical": "catalog:",
    "@payloadcms/storage-s3": "catalog:",
    "@payloadcms/ui": "catalog:",
    "@tailwindcss/postcss": "^4.1.18",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "next": "catalog:",
    "payload": "catalog:",
    "postcss": "^8.5.6",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@app/types": "workspace:*",
