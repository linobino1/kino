{
  "name": "cms",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:unocss": "unocss --out-file \"src/app/(payload)/uno.css\" \"./src/**/*.tsx\" --watch",
    "dev:next": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev": "run-p dev:unocss dev:next",
    "build:unocss": "unocss --out-file \"src/app/(payload)/uno.css\" \"./src/**/*.tsx\"",
    "build:next": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "build": "pnpm generate:types && pnpm build:unocss && pnpm build:next",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "typecheck": "tsc",
    "migrate:v2": "cross-env tsx src/scripts/migrationV2/index.ts",
    "migrate:slate": "cross-env tsx src/scripts/migrationV2/slateToLexical.ts",
    "seed": "tsx ./src/seed/run.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "catalog:",
    "@payloadcms/email-nodemailer": "catalog:",
    "@payloadcms/next": "catalog:",
    "@payloadcms/plugin-seo": "catalog:",
    "@payloadcms/richtext-lexical": "catalog:",
    "@payloadcms/storage-s3": "catalog:",
    "@payloadcms/translations": "catalog:",
    "@payloadcms/ui": "catalog:",
    "@react-email/components": "^0.0.32",
    "@types/escape-html": "^1.0.4",
    "axios": "^1.7.7",
    "cookie-es": "^1.2.2",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "deepmerge": "^4.3.1",
    "escape-html": "^1.0.3",
    "glob": "^11.0.0",
    "next": "15.1.6",
    "nodemailer": "^6.9.16",
    "nodemailer-zeptomail-transport": "^1.0.13",
    "payload": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-email": "^3.0.6",
    "react-i18next": "^15.0.3",
    "sharp": "0.32.6",
    "slate": "^0.103.0",
    "slate-react": "^0.110.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^6.4.16",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@unocss/cli": "^0.63.4",
    "dotenv": "^16.4.5",
    "msw": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.19.1",
    "unocss": "^0.63.4",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
